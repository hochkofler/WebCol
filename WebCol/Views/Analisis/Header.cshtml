@model List<WebCol.Models.Lote>
@{
    ViewData["Title"] = "Elegir lote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Create" methid="get">
    <div class="input-group mb-4">
        <select class="form-select form-control" name="IdLote" asp-items="@(new SelectList(Model, "Id", "Id"))">
            <option value="">Seleccione un lote</option>
        </select>
        <button class="btn btn-outline-secondary" type="submit">Continuar</button>
    </div>
</form>